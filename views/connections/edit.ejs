<%- include('../partials/header.ejs')%>
<div class = "content">
    <main>
        <form method = "POST" action = "/connections/<%= connection.id%>?_method=PUT">
            <table>
                <tr>
                    <td><label for="category" >Category</label></td>
                    <td><input type="text" id="category" name="category" value = "<%= connection.category%>" class = "fixed-width"></td>
                </tr>
                <tr>
                    <td><label for="author">Author</label></td>
                    <td><input type="text" id="author" name="author" value = "<%= connection.author%>" class = "fixed-width"></td>
                </tr>
                <tr>
                    <td><label for="title" >Title</label></td>
                    <td><input type="text" id="title" name="title" value = "<%= connection.title%>" class = "fixed-width"></td>
                </tr>
                <tr><td class = "align-top"><label for="content">Content</label></td>
                    <td><textarea rows="5" id="content" name="content" class = "fixed-width"><%= connection.content%></textarea></td>
                </tr>
                <tr>
                    <td class = "align-top"><label for="date">Date and Time</label></td>
                    <td><input type="text" id="date" name="date" value = "<%= connection.date%>" class = "fixed-width"></input></td>
                </tr>
                <tr>
                    <td class = "align-top"><label for="location">Location</label></td>
                    <td><input type="text" id="location" name="location" value = "<%= connection.location%>" class = "fixed-width"></input></td>
                </tr>
                <tr>
                    <td class = "align-top"><label for="condetails">Details</label></td>
                    <td><textarea rows="5" id="condetails" name="condetails" value = "<%= connection.condetails%>" class = "fixed-width"></textarea></td>
                </tr>
                <tr>
                    <td><label for="image">Image URL</label></td>
                    <td><input type="text" id="image" name="image" value = "<%= connection.image%>" class = "fixed-width"></td>
                </tr>
                <tr>
                    <td colspan="2" class = "align-right"><button>Submit</button></td>
                </tr>
                </table>        
        </form>
    </main>
</div>
    <%- include('../partials/footer.ejs')%>
